#PBS -l select=1:ncpus=97:mpiprocs=97:mem=150GB
#PBS -l debug=true

#%include <head.h>
#%include <envir-xc40.h>

# versions file for naefs sets $naefs_ver and $code_ver
model=naefs
#%include <model_ver.h>

## HOMEnaefs will de defined by the eclfow apps
export HOMEnaefs=${HOMEnaefs:-/lfs/h2/emc/vpppg/noscrub/Bo.Cui/naefs.v6.1.0}

source ${HOMEnaefs}/versions/run.ver

cd $PBS_O_WORKDIR

set -x

module purge
module load envvar/${envvar_ver}
module load PrgEnv-intel/${PrgEnv_intel_ver}
module load craype/${craype_ver}
module load intel/${intel_ver}
module load cray-mpich/${cray_mpich_ver}
module load cray-pals/${cray_pals_ver}
module load cfp/${cfp_ver}
module load prod_envir/${prod_envir_ver}
module load prod_util/${prod_util_ver}
module load libjpeg/${libjpeg_ver}
module load grib_util/${grib_util_ver}
module load wgrib2/${wgrib2_ver}
module load iobuf/${iobuf_ver}
module load craype-hugepages2M
module list

export direxp=naefs.v6.1.0
#export envir=prod
export RUN_ENVIR=nco

export PDY=20210824
export cyc=00               
export job=naefs_cmc_ens_post_$PDY$cyc

export HOMEnaefs=/lfs/h2/emc/vpppg/noscrub/Bo.Cui/$direxp
export HOMEgefs=/lfs/h2/emc/vpppg/noscrub/Bo.Cui/$direxp
export NWROOT=/lfs/h2/emc/vpppg/noscrub/Bo.Cui
export DATAROOT=/lfs/h2/emc/ptmp/Bo.Cui/tmpnwprd

export COMROOT=/lfs/h1/ops/canned/com                    
export DCOMROOT=/lfs/h1/ops/canned/dcom                     

# EXPORT list here

export APRUN="mpiexec -np 97 --cpu-bind core cfp "         
export APRUN_post="mpiexec -np 17 --cpu-bind core cfp "         
export APRUN_stat="mpiexec -np 13 --cpu-bind core cfp "         
export IOBUF_PARAMS='*:sync,%%stdout:sync'

export OMP_NUM_THREADS=1

#export cyc=%CYC%

export PACKAGEROOT=/lfs/h2/emc/vpppg/noscrub/Bo.Cui
export COMPATH=/lfs/h1/ops/canned/com/naefs:/lfs/h1/ops/canned/com/gefs:/lfs/h1/ops/canned/com/cfs
export COMROOT=/lfs/h2/emc/ptmp/Bo.Cui/com
export KEEPDATA=YES

# CALL executable job script here
${HOMEnaefs}/jobs/JNAEFS_CMC_ENS_POST   

