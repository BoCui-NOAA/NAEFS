
CDATE=2022062500

ndays=11
iday=1

NCO=/lfs/h1/ops/prod
while [ $iday -le $ndays ]; do

  export PDY=`echo $CDATE | cut -c1-8`
  export cyc=`echo $CDATE | cut -c9-10`

  DCOM=$NCO/dcom/${PDY}/wgrbbul/cmcens_gb2
  cd $DCOM

# echo $CDATE
# echo  " "
# ls -ltrc ${CDATE}*latlon0p5x0p5* | head -1 
# echo  " "
  ls -ltrc ${CDATE}*latlon0p5x0p5* | tail -1 
# echo  " "

  iday=`expr $iday + 1`
  export CDATE=`$NDATE +24 $CDATE`

done

