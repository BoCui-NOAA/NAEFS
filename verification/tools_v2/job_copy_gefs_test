CDATE=2016063000
ndays=1

#COM=/gpfs/tp2/nco/ops/com/gens/prod
#DATA=/gpfs/hps/emc/ensemble/noscrub/Bo.Cui/com/gens/prod

COM=$NGLOBAL/Bo.Cui/com/gens/prod  
DATA=$NGLOBAL/Bo.Cui/com/gens/prod

cd $DATA

NDATE=/gpfs/hps/nco/ops/nwprod/prod_util.v1.0.4/exec/ndate

iday=1
while [ $iday -le $ndays ]; do

  export PDY=`echo $CDATE | cut -c1-8`
  export cyc=`echo $CDATE | cut -c9-10`

# mkdir -p gefs.${PDY}/${cyc}/pgrb2a
  mkdir -p gefs.${PDY}/${cyc}
  cp -r $COM/gefs.${PDY}/${cyc}/pgrb2a    gefs.${PDY}/${cyc}
  cp -r $COM/gefs.${PDY}/${cyc}/pgrb2a_bc gefs.${PDY}/${cyc}
  cp -r $COM/gefs.${PDY}/${cyc}/pgrb2a_an gefs.${PDY}/${cyc}
  cp -r $COM/gefs.${PDY}/${cyc}/ndgd_gb2  gefs.${PDY}/${cyc}

# cp $COM/gefs.${PDY}/${cyc}/pgrb2a/*avg*pgrb2af*  gefs.${PDY}/${cyc}/pgrb2a
# cp $COM/gefs.${PDY}/${cyc}/pgrb2a/*gfs*pgrb2a**  gefs.${PDY}/${cyc}/pgrb2a
# cp $COM/gefs.${PDY}/${cyc}/pgrb2a/*c00*pgrb2a**  gefs.${PDY}/${cyc}/pgrb2a
# rm gefs.${PDY}/${cyc}/pgrb2a/*idx

  iday=`expr $iday + 1`
  CDATE=`$NDATE +06 $CDATE`

  echo $CDATE
done

