CDATE=2015041100
ndays=80
iday=1

COM=$NGLOBAL/Bo.Cui/com/gens/prod          
nhours=/nwprod/util/exec/ndate

while [ $iday -le $ndays ]; do

  PDY=`echo $CDATE | cut -c1-8`
  cyc=`echo $CDATE | cut -c9-10`

  echo " day " $PDY$cyc

  file=ncepcmc_glbanl.t${cyc}z.pgrb2a_mdf00
  cp /com/gens/prod/gefs.$PDY/$cyc/pgrb2a/$file  $COM/gefs.$PDY/$cyc/pgrb2a/

  iday=`expr $iday + 1`
  CDATE=`$nhours +06 $CDATE`

done


