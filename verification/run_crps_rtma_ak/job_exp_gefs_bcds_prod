export CDATE=2015041100
ndays=36
iday=1
 
nhours=/nwprod/util/exec/ndate

while [ $iday -le $ndays ]; do

  export id=gefs
  export ireg=alaska     
  export IF_NDGD=YES

  export DSIM=prod_gefs

  export ENSIM=gefs_bc
  run_anl_3centers_prod     $CDATE > $PTMP/Bo.Cui/trash 2>&1&
# run_anl_3centers_prod     $CDATE

  iday=`expr $iday + 1`
  export CDATE=`$nhours +24 $CDATE`

done

