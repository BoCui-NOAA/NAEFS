#export CDATE=2016010100
#ndays=20
iday=1
 
nhours=/nwprod/util/exec/ndate

while [ $iday -le $ndays ]; do

  export id=naefs
  export ireg=alaska     
  export IF_NDGD=YES

  export DSIM=prod_naefs_3p0

  export ENSIM=naefs_bc
  run_anl_3centers_prod_3p0 $CDATE > $PTMP/Bo.Cui/trash 2>&1&
# run_anl_3centers_test_3p0 $CDATE

  iday=`expr $iday + 1`
  export CDATE=`$nhours +24 $CDATE`

done

