#set -x

#Date=`date +%y%m%d%H`
#CDATE=20$Date

CDATE=2023010100   

COM=/lfs/h2/emc/vpppg/noscrub/bo.cui/com                            

ndays=137
iday=1

>out

while [ $iday -le $ndays ]; do

export PDY=`echo $CDATE | cut -c1-8`
export cyc=`echo $CDATE | cut -c9-10`

echo $CDATE >>out

ls $COM/rtma/v2.9/*$PDY/*tmax*            | wc  >>out
ls $COM/rtma/v2.9/*$PDY/*tmin*            | wc  >>out

echo " "    >>out

iday=`expr $iday + 1`
export CDATE=`$NDATE +24 $CDATE`

done


