CDATE=2014012400
ndays=7
iday=1

COM=$NGLOBAL/Bo.Cui/com/gens/prod          
nhours=/nwprod/util/exec/ndate

while [ $iday -le $ndays ]; do

  PDY=`echo $CDATE | cut -c1-8`
  cyc=`echo $CDATE | cut -c9-10`

  echo " day " $PDY$cyc

  COMINNCEP=$COM/fens.$PDY/$cyc
  ls $COMINNCEP/pgrba_bc/fnmoc_geavg.t${cyc}z* | wc
  ls $COMINNCEP/pgrba_bc/fnmoc_gespr.t${cyc}z* | wc

  iday=`expr $iday + 1`
  CDATE=`$nhours +24 $CDATE`

done


