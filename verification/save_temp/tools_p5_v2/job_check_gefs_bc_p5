CDATE=2016080100
ndays=31
iday=1

#COM=$NCO/com/gens/prod          
#COM=/gpfs/gp2/nco/ops/com/gens/prod          
#COM=$PTMP/Bo.Cui/com/gens/prod          
COM=$NGLOBAL/Bo.Cui/naefs.v6.0.1/com/gens/prod          
COM=$NGLOBAL/Bo.Cui/naefs.v6.0.2/com/gens/prod          

echo " average 194 in prod"
echo " c00     194 in prod"
echo " gfs     170 in prod"
echo "                    "

while [ $iday -le $ndays ]; do

  PDY=`echo $CDATE | cut -c1-8`
  cyc=`echo $CDATE | cut -c9-10`

  echo " day " $PDY$cyc

  COMINNCEP=$COM/gefs.$PDY/$cyc

  rm $COMINNCEP/pgrb2ap5_bc/*idx
# ls $COMINNCEP/pgrb2ap5_bc/*avg*f*   | wc
# ls $COMINNCEP/pgrb2ap5_bc/*spr*f*   | wc
  ls $COMINNCEP/pgrb2ap5_bc/*gep*f*   | wc
  ls $COMINNCEP/pgrb2ap5_bc/*c00*f*   | wc
  ls $COMINNCEP/pgrb2ap5_bc/*gfs*f*   | wc

  iday=`expr $iday + 1`
  CDATE=`$NDATE +24 $CDATE`

done


